<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3>
				<%= @product.title %>
			</h3>
      <%= image_tag('drug.png', class: "rounded", size: '250x250')  %>
			<table class="table table-striped table-hover table-sm">
				<thead>
					<tr>
						<th>
							Description
						</th>
						<th>
							Status
						</th>
						<th>
							Price
						</th>
            <th>
							Manufacturer
						</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<%= @product.description %>
						</td>
						<td>
							<%= @product.status %>
						</td>
						<td>
							$<%= @product.price %>
						</td>
            <td>
							<%= @product.manufacturer.title %>
						</td>
					</tr>
					</tbody>
			</table>
		</div>
	</div>
</div>
